#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    for(int row = 1; row <= n; row++){
        if(row % 2 == 0){                  // even case loop
        int num = 0;
        for(int col = 1;col <= row; col++){
            cout<<num<<" ";
            num = 1-num;
        }
        }

        else{                            //  odd case
        int num=1;
        for(int col=1; col<=row; col++){
            cout<<num<<" ";
            num=1-num;
        }
        }
        cout<<endl;
    }
}


//output
1 
0 1 
1 0 1 
0 1 0 1 
1 0 1 0 1 


//end

