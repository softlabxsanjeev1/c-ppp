#include <iostream>
using namespace std;
int main() {
    int arr[12];          // decalaration of array

    // loop to take input values and store in array
    for(int i = 0; i<=12; i++){
        cin>>arr[i];
    }

    cout<<"Odd no in given array"<<endl;
    cout<<"Index  "<<"  values"<<endl;    

    // lopp for print odd values of array
    int count = 0;
    int even = 0;
    for(int i = 0; i<=12; i++){
        if(arr[i]%2 != 0){
            count = count+1;
            cout<<" "<<i<<"    ->   "<< arr[i]<<endl;
        }else{
            even = even +1;
        }
    }
    cout<<endl;
    cout<<"Total "<<count<< "  odd no in given array"<<endl;
    cout<<"Total "<<even<< "  even no in given array"<<endl;

    return 0;
}
